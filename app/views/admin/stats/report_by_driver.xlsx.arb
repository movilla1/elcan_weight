# frozen_string_literal: true

table_for report_rows do
  column I18n.t('driver'), :driver
  column I18n.t('truck'), :truck
  column I18n.t('weights'), :weights do |item|
    table_for item[:weights] do
      column I18n.t('weight'), :measured_weight
      column I18n.t('date_weight'), :weight_start
    end
    div do
      strong { I18n.t('total_weight')+": "+item[:total_weight].to_s }
    end
  end
end
